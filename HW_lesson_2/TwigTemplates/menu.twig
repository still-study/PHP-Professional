
<div class="{{ classMenu }}">
    <a href="/">Главная</a>
    <a href="/product/catalog">Каталог</a>
    <a href="/basket">Корзина (<span id="count">{{ count }}</span>)</a>
    <a href="/feedback/all">Отзывы</a>
{% if isAdmin %}
    <a href="/admin/">***АДМИНКА***</a>
{% endif %}
{% if auth %}
    Добро пожаловать {{ userName }} <a href="/auth/logout/">[Выход]</a>
{% else %}
    <form action="/auth/login/" method="post">
        <input type="text" name="login" placeholder="Логин">
        <input type="text" name="pass" placeholder="Пароль">
        <input type="submit" name="submit" value="Войти">
    </form>
{% endif %}
</div>

<p id="basket_sum">Товаров на сумму: <span id="sum">{{ sum }} </span> р.</p>


