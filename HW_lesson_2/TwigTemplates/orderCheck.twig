<h2>Подтвердите данные</h2>

<p>Имя: {{ firstName }}</p>
<p>Фамилия: {{ lastName }}</p>
<p>Адрес доставки: {{ address }}</p>
<p>Контактный телефон: {{ tel }}</p>

<div class="basket_box">
    {% for item in basket %}
        <div class="product_basket" id="{{ item.basket_id }}">
            <h3>{{ item.name }}</h3>
            <p>{{ item.description }}</p>
            <p>Цена: <span class="amount">{{ item.amount }}</span></p>
            <p>Количество: <span class="quantity">{{ item.quantity }}</span></p>
        </div>

    {% endfor %}
</div>

<p>ИТОГО К ОПЛАТЕ: <b>{{ total }}</b> р.</p>

<form action="/order/create" method="post">
    <input type="hidden" name="firstName" value="{{ firstName }}">
    <input type="hidden" name="lastName" value="{{ lastName }}">
    <input type="hidden" name="address" value="{{ address }}">
    <input type="hidden" name="tel" value="{{ tel }}">
    <input type="submit" name="submit" value="Оформить">
</form>
